  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Flask",
      "type": "python",
      "request": "launch",
      "module": "flask",
      "python": "${workspaceFolder}/frontend/.venv/bin/python",
      "envFile": "${workspaceFolder}/frontend.env",
      "env": {
        "FLASK_APP": "frontend/app.py",
        "FLASK_DEBUG": "1"
      },
      "args": [
        "run",
        "--no-debugger",
        "--no-reload",
        "--port",
        "5001"
      ],
      "jinja": true,
      "justMyCode": true
    },
    {
      "name":"Python: Backend Script",
      "type":"debugpy",
      "request":"launch",
      "program":"${file}",
      "cwd": "${fileDirname}",
      "python": "${workspaceFolder}/backend/.dev_venv/bin/python",
      "envFile": "${workspaceFolder}/backend.env",
      "console":"integratedTerminal",
      "justMyCode":true
    },
    {
      "name":"Python: Frontend Script",
      "type":"debugpy",
      "request":"launch",
      "program":"${file}",
      "cwd": "${fileDirname}",
      "python": "${workspaceFolder}/frontend/.venv/bin/python",
      "envFile": "${workspaceFolder}/frontend.env",
      "console":"integratedTerminal",
      "justMyCode":true
    },
    {
      "name":"Python: GL Script",
      "type":"debugpy",
      "request":"launch",
      "program":"${file}",
      "cwd": "${fileDirname}",
      "python": "${workspaceFolder}/generate_listings/.venv/bin/python",
      "envFile": "${workspaceFolder}/frontend.env",
      "console":"integratedTerminal",
      "justMyCode":true
    },
  ]
}